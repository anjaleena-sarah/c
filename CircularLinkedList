//circular linked list

#include<stdio.h>
#include<malloc.h>

struct node
{
	int data;
	struct node * next;
};

struct node *head=NULL;
void insert(int e)
{
	struct node *t;
	if(head==NULL)
	{
		head=(struct node*)malloc(sizeof(struct node));
		head->data=e;
		head->next=head;
	}
	else
	{
		t=head;
		while(t->next!=head)
		{
			t=t->next;
		}
		t->next=(struct node *)malloc(sizeof(struct node));
		t->next->data=e;
		t->next->next=head;
	}
}
void display()
{
	struct node *t;
	if(head==NULL)
	{
		printf("\nCircular Linked List is Empty");
	}
	else
	{
		t=head;
		printf("\n");
		while(t->next!=head)
		{
			printf("%d\t",t->data);
			t=t->next;
		}
		printf("%d",t->data);
	}
}

void display2()
{
	struct node *t;
	if(head==NULL)
	{
		printf("\n Circular Linked List is Empty");
	}
	else
	{
		t=head;
		printf("\n");
		do
		{
			printf("%d\t",t->data);
			t=t->next;
		}
		while(t!=head);
	}
}
void delete(int e)
{
	struct node *t;
	if(head==NULL) //case 1 : When link is empty
	{
		printf("\n Empty Circular Linked List");
	}
	else if(head->data==e&&head->next==head)// 1st element with one elt
	{
		head=NULL;
	}
	else if(head->data==e)// 1st elt with several elt
	{
		t=head;
		while(t->next!=head)// finding the last node
		{
			t=t->next;
		}
		t->next=head->next;
		head=head->next;
	}
	else
	{
		t=head;
		while(t->next!=head&&t->next->data!=e)
		{
			t=t->next;
		}
		if(t->next==head)
		{
			printf("\n Element not found");
		}
		else    // intermediate or last node
		{
			t->next=t->next->next;
		}
	}
}

int main()
{
	insert(10);
	insert(20);
	insert(30);
	display();
	display2();
	delete(20);
	display();
	delete(100);
	display();
	delete(10);
	display();
	delete(30);
	display();
}

