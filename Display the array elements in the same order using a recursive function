#include<stdio.h>
int dispArr(int a[10],int size,int i)
{
    if(i==size)
    {
   	 return 0;
    }
    else
   {
   	 printf("%d\t",a[i]);
   	 i++;
   	 return dispArr(a,size,i);
    }
}

void main()
{
    int size,i,a[10];
    printf("Enter the array size: ");
    scanf("%d",&size);
    for(i=0;i<size;i++)
   {
   	 printf("Enter the element a[%d]: ",i+1);
   	 scanf("%d",&a[i]);
    }

    printf("\nArray elements in same order: ");
    dispArr(a,size,0);
}
